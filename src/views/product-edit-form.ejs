<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Editando: ' + '¿?' }) %>

	<body>
		<!-- Header -->
		<%- include('partials/headerNavbar') %>
			<!-- /Header -->

			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Estás editando: <%= productoEditar.name %>
						</h2>
					</div>
				</div>
				<div class="col-12">
					<form action="/products/<%= productoEditar.id %>/?_method=PUT" method="POST">
						<div class="row product-detail">
							<div class="col-12 col-md-6">
								<label for="name" class="form-label">Nombre del producto:</label>
								<input type="text" id="name" name="name" value="<%=productoEditar.name %>"
									placeholder="Ej: <%= productoEditar.name %>" class="form-input">
							</div>
							<div class="col-12 col-md-6">
								<label for="price" class="form-label">Precio del producto:</label>
								<input type="text" id="price" name="price" value="<%=productoEditar.price %>"
									placeholder="Ej: <%= productoEditar.price %>" class="form-input">
							</div>
							<div class="col-12 col-md-6">
								<label for="discount" class="form-label">Descuento:</label>
								<input type="text" id="discount" name="discount" value="<%=productoEditar.discount %>"
									placeholder="Ej: <%= productoEditar.discount %>" class="form-input">
							</div>
							<div class="col-12 col-md-6">
								<label for="discount" class="form-label">Imagen:</label>
								<input type="file" id="image" value="<%=productoEditar.image %>" name="image"
									accept="image/png,image/jpeg" class="form-input">
							</div>
							<div class="col-12 col-md-6">
								<label for="category" class="form-label">Categoría:</label>
								<select name="category" id="category" class="form-input">
									<option value="">Elegí</option>
									<option value="in-sale" <%=productoEditar.category=="in-sale" ? "selected" : "" %>
										>En
										oferta</option>
									<option value="visited" <%=productoEditar.category=="visited" ? "selected" : "" %>
										>Últimos agregados</option>
								</select>
							</div>
							<div class="col-12">
								<label for="description" class="form-label">Descipción:</label>
								<textarea name="description" id="description" value="<%=productoEditar.description %>"
									class="form-input"><%= productoEditar.description %></textarea>
							</div>
							<div class="col-12">
								<button type="submit" class="buy-now-button">Guardar producto</button>
							</div>
						</div>
					</form>
				</div>

			</div>
			<!-- /todos los productos -->

			<!-- footer -->
			<%- include('partials/footer') %>
				<!-- /footer -->
	</body>

</html>